{
  "name": "@digitalroute/bagger",
  "version": "0.0.1",
  "description": "ðŸŽ’ A joi-compatible tool for building swagger definitions",
  "main": "dist/bagger.umd.js",
  "module": "dist/bagger.es5.js",
  "typings": "dist/types/bagger.d.ts",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=9.11.2"
  },
  "scripts": {
    "commit": "git-cz",
    "eslint": "eslint -c .eslintrc.json 'lib/**/*.ts' 'test/**/*.ts'",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:prod": "npm run test -- --no-cache",
    "semantic-release": "semantic-release",
    "prebuild": "rimraf dist",
    "build": "tsc --module commonjs && rollup -c rollup.config.ts",
    "generate-docs": "rimraf docs && typedoc --out docs --target es6 --mode file lib && touch ./docs/.nojekyll",
    "gh-pages": "gh-pages -d docs --dotfiles --user \"CircleCI <circleci@digitalroute.com>\"",
    "prettier": "prettier --write \"*.{js,json,md,yml}\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/digitalroute/bagger.git"
  },
  "keywords": [
    "swagger",
    "build",
    "joi",
    "schema",
    "generator",
    "json",
    "json schema",
    "builder"
  ],
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/digitalroute/bagger/issues"
  },
  "homepage": "https://digitalroute.github.io/bagger/",
  "dependencies": {
    "@types/content-type": "^1.1.3",
    "@types/hapi__joi": "^15.0.3",
    "content-type": "^1.0.4",
    "joi": "^14.3.1",
    "joi-to-swagger": "^3.2.0",
    "json-schema-to-openapi-schema": "^0.3.0",
    "openapi3-ts": "^1.3.0"
  },
  "devDependencies": {
    "@hapi/joi": "^15.1.0",
    "@types/jest": "^24.0.17",
    "@typescript-eslint/eslint-plugin": "^1.13.0",
    "@typescript-eslint/parser": "^1.13.0",
    "commitizen": "^4.0.3",
    "cz-conventional-changelog": "^3.0.2",
    "eslint": "^6.1.0",
    "eslint-config-nodejs": "^2.0.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jest": "^22.15.1",
    "gh-pages": "^2.1.1",
    "husky": "^3.0.3",
    "jest": "^24.8.0",
    "jest-config": "^24.8.0",
    "lint-staged": "^9.2.1",
    "lodash.camelcase": "^4.3.0",
    "prettier": "^1.18.2",
    "rimraf": "^2.6.3",
    "rollup": "^0.67.0",
    "rollup-plugin-commonjs": "^9.1.8",
    "rollup-plugin-json": "^3.1.0",
    "rollup-plugin-node-resolve": "^3.4.0",
    "rollup-plugin-sourcemaps": "^0.4.2",
    "rollup-plugin-typescript2": "^0.22.1",
    "semantic-release": "^15.13.19",
    "ts-jest": "^24.0.2",
    "typedoc": "^0.15.0",
    "typescript": "^3.5.3"
  },
  "jest": {
    "transform": {
      ".ts": "ts-jest"
    },
    "testEnvironment": "node",
    "testRegex": ".*\\.test\\.(ts)$",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "collectCoverageFrom": [
      "lib/*/**.{ts}"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,md,yml}": [
      "prettier --write",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "release": {
    "branch": "master"
  }
}
